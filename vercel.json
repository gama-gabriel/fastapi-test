{
	"buildCommand": "pip install requirements.txt -r && ls -la / && du -sh *",
	"functions": {
		"api/**": {
			"includeFiles": "{polars,pandas,numpy,sqlalchemy,numpy.libs}/**",
			"excludeFiles": "/{node_modules,.vercel}/**"
		}
	},
	"rewrites": [
		{
			"source": "/(.*)",
			"destination": "api/index.py"
		}
	]
}
